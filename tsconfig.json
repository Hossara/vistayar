{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "noImplicitAny": true,
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["src/*"],
      "@app": ["src/app.ts"],
      "@index": ["src/index.ts"],
      "@interfaces": ["src/interfaces.ts"],
    },
    "rootDirs": [
      "./src",
      "./test"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ],
  "exclude": ["./coverage", "./dist",
    "jest.config.js"
  ]
}